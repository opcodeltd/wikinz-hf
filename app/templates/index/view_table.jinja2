{%- set page_title = 'Home' -%}
{%- extends 'base.jinja2' %}
{%- block content -%}
    <h2>Table <span class="muted">&gt;</span> {{ table.title }}</h2>
    <p>
    {{ table.description }}
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                {% for col in table.data %}
                    <th>{{ col.title.value }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for row in table.as_rows() %}
                <tr>
                    {% for cell in row %}
                        <td>{{ cell.value }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>

{%- endblock -%}
{% block script %}
{% endblock %}
