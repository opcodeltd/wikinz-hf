{%- set page_title = 'SpreadJS' -%}
{%- extends 'base.jinja2' %}
{%- block content -%}
    <form method="post" class="add-series form-horizontal" style="margin-bottom: 10px;">
        <div class="form-group">
            <label class="control-label col-sm-3" data-select-target="source-title">Title:</label>
            <div class="col-sm-9" data-select-target="source-title">
                <input type="text" class="form-control" id="source-title" data-select-target="source-title">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">Description:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="source-description" data-select-target="source-description">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">Source:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="source-source" data-select-target="source-source">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">Columns:</label>
            <div class="col-sm-9">
                <table class="table" id="column-table"></table>
                <button type="button" id="add-series" class="btn btn-primary">Add series</button>
            </div>
        </div>
    </form>
    <div id="ss" style="width:100%;height:400px;"></div>
{%- endblock -%}

{%- block head %}
    <link href="http://cdn.wijmo.com/themes/aristo/jquery-wijmo.css" rel="stylesheet" type="text/css" />
    <link href="http://cdn.wijmo.com/spreadjs/jquery.wijmo.wijspread.3.20142.13.css" rel="stylesheet" type="text/css" />
{%- endblock %}

{%- block script %}
<script src="{{ cdn('js/backbone.collectionView.min.js') }}"></script>
<script src="http://cdn.wijmo.com/spreadjs/jquery.wijmo.wijspread.all.3.20142.13.min.js" type="text/javascript"></script>
<script type="text/javascript">
var SHEET_DATA = {{ sheets | tojson | safe }};
var COLUMN_VIEW_TPL = {{ column_view_tpl | tojson | safe }};
</script>
<script src="{{ cdn('js/extractor.js') }}"></script>
<script type="text/javascript">
</script>
{%- endblock %}
