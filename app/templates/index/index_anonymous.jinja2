{%- set page_title = 'Home' -%}
{%- extends 'base.jinja2' %}
{%- block content -%}
    <div class="jumbotron">
        <div id="login-form" class="well hidden-phone">
            <form action="{{ url_for('trex.auth.login') }}" method="POST" accept-charset="utf-8" class="form">
                    <input type="hidden" name="_csrf_token" value="{{ g.identity.get_csrf() }}">
                <input type="email" name="email" placeholder="email" class="form-control">
                <input type="password" name="password" placeholder="password" class="form-control">
                <button type="submit" class="btn btn-primary">Log in</button>
            </form>
        </div>
        <h1>WikiNZ Pipeline Alpha</h1>
        <p>Demonstrating the pipeline from spreadsheet data to graphs.</p>
    </div>
{%- endblock -%}
